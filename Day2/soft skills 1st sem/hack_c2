// write a cprogram to print the count of even numbers and odd numbers present  1 to n
#include <stdio.h>
int main()
{
    int num;
    int sum = 0;
    int even_count = 0;
    int odd_count = 0;
    printf("enter the value of num: ");
    scanf("%d", &num);
    for (int i = 1; i <= num; i++)
    if (i % 2 == 0)
    {
        even_count++;
    }
    }
    printf("Even  count  = %d \n", even_count);
    printf("Odd count = %d \n", odd_count);
     return 0;
     }
